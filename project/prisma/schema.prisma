// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Referee {
  id          Int      @id @default(autoincrement())
  apiId       Int      @unique
  name        String
  nationality String?
  photo       String?
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  matches     Match[]
  seasonStats RefereeSeasonStats[]
  favoritedBy FavoriteReferee[]

  @@map("referees")
}

model League {
  id        Int      @id @default(autoincrement())
  apiId     Int      @unique
  name      String
  country   String
  logo      String?
  season    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  matches Match[]
  teams   Team[]

  @@map("leagues")
}

model Team {
  id        Int      @id @default(autoincrement())
  apiId     Int      @unique
  name      String
  logo      String?
  leagueId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  league     League  @relation(fields: [leagueId], references: [id])
  homeMatches Match[] @relation("HomeTeam")
  awayMatches Match[] @relation("AwayTeam")

  @@map("teams")
}

model Match {
  id         Int      @id @default(autoincrement())
  apiId      Int      @unique
  date       DateTime
  venue      String?
  status     String
  homeGoals  Int?
  awayGoals  Int?
  leagueId   Int
  homeTeamId Int
  awayTeamId Int
  refereeId  Int?
  season     Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  league   League    @relation(fields: [leagueId], references: [id])
  homeTeam Team      @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam Team      @relation("AwayTeam", fields: [awayTeamId], references: [id])
  referee  Referee?  @relation(fields: [refereeId], references: [id])
  stats    MatchStats?

  @@map("matches")
}

model MatchStats {
  id              Int   @id @default(autoincrement())
  matchId         Int   @unique
  yellowCards     Int   @default(0)
  redCards        Int   @default(0)
  homeYellowCards Int   @default(0)
  awayYellowCards Int   @default(0)
  homeRedCards    Int   @default(0)
  awayRedCards    Int   @default(0)
  fouls           Int   @default(0)
  homeFouls       Int   @default(0)
  awayFouls       Int   @default(0)
  penalties       Int   @default(0)
  homePenalties   Int   @default(0)
  awayPenalties   Int   @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  match Match @relation(fields: [matchId], references: [id])
  cardEvents CardEvent[]

  @@map("match_stats")
}

model CardEvent {
  id           Int      @id @default(autoincrement())
  matchStatsId Int
  minute       Int
  extraMinute  Int?
  type         String   // 'yellow' or 'red'
  teamId       Int
  playerName   String?
  isHome       Boolean
  createdAt    DateTime @default(now())

  matchStats MatchStats @relation(fields: [matchStatsId], references: [id])

  @@map("card_events")
}

model RefereeSeasonStats {
  id               Int    @id @default(autoincrement())
  refereeId        Int
  season           Int
  leagueApiId      Int
  matchesOfficiated Int   @default(0)
  totalYellowCards Int    @default(0)
  totalRedCards    Int    @default(0)
  avgYellowCards   Float  @default(0)
  avgRedCards      Float  @default(0)
  totalPenalties   Int    @default(0)
  avgPenalties     Float  @default(0)
  totalFouls       Int    @default(0)
  avgFouls         Float  @default(0)
  strictnessIndex  Float  @default(0)
  homeBiasScore    Float  @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  referee Referee @relation(fields: [refereeId], references: [id])

  @@unique([refereeId, season, leagueApiId])
  @@map("referee_season_stats")
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("user")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  favorites     FavoriteReferee[]
  alerts        Alert[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model FavoriteReferee {
  id        Int      @id @default(autoincrement())
  userId    String
  refereeId Int
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  referee Referee @relation(fields: [refereeId], references: [id], onDelete: Cascade)

  @@unique([userId, refereeId])
  @@map("favorite_referees")
}

model Alert {
  id        Int      @id @default(autoincrement())
  userId    String
  refereeId Int?
  leagueId  Int?
  type      String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("alerts")
}
